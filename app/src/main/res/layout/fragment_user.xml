<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efeff4"
    tools:context="com.example.xm.fragment.UserFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="8"
                android:orientation="vertical">

                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:background="@color/white"
                    android:elevation="5dp"
                    android:orientation="vertical"
                    app:divider="@drawable/dot"
                    app:showDividers="beginning|end">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:src="@drawable/ic_user" />


                        </LinearLayout>

                        <android.support.v7.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:divider="@drawable/dot"
                            app:showDividers="middle">

                            <Button
                                android:id="@+id/user"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:background="@color/white"
                                android:gravity="left|center_vertical"
                                android:paddingLeft="15dp"
                                android:text="用户名"
                                android:textSize="30sp" />


                        </android.support.v7.widget.LinearLayoutCompat>
                    </LinearLayout>

                </android.support.v7.widget.LinearLayoutCompat>

                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:background="@color/white"
                    android:elevation="5dp"
                    android:orientation="vertical"
                    app:divider="@drawable/dot"
                    app:showDividers="beginning|end">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:src="@drawable/ic_changepwd" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:src="@drawable/ic_repair" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:src="@drawable/ic_feedback" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:src="@drawable/ic_about" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:src="@drawable/ic_version" />
                        </LinearLayout>

                        <android.support.v7.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:divider="@drawable/dot"
                            app:showDividers="middle">

                            <Button
                                android:id="@+id/changepwd"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:background="@color/white"
                                android:drawableRight="@drawable/arrow"
                                android:gravity="left|center_vertical"
                                android:paddingLeft="15dp"
                                android:text="修改密码"
                                android:textSize="30sp" />

                            <Button
                                android:id="@+id/repair"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:background="@color/white"
                                android:drawableRight="@drawable/arrow"
                                android:gravity="left|center_vertical"
                                android:paddingLeft="15dp"
                                android:text="报修"
                                android:textSize="30sp" />

                            <Button
                                android:id="@+id/feedback"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:background="@color/white"
                                android:drawableRight="@drawable/arrow"
                                android:gravity="left|center_vertical"
                                android:paddingLeft="15dp"
                                android:text="反馈"
                                android:textSize="30sp" />


                            <Button
                                android:id="@+id/about"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:background="@color/white"
                                android:drawableRight="@drawable/arrow"
                                android:gravity="left|center_vertical"
                                android:paddingLeft="15dp"
                                android:text="关于"
                                android:textSize="30sp" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical">

                                <Button
                                    android:id="@+id/update"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@color/white"
                                    android:drawableRight="@drawable/arrow"
                                    android:gravity="left|center_vertical"
                                    android:paddingLeft="15dp"
                                    android:text="当前版本"
                                    android:textSize="30sp" />

                                <TextView
                                    android:id="@+id/version"
                                    android:layout_width="wrap_content"
                                    android:layout_height="65dp"
                                    android:layout_alignRight="@id/update"
                                    android:gravity="center_vertical"
                                    android:paddingRight="40dp"
                                    android:text="2.0.1"
                                    android:textColor="@color/red"
                                    android:textSize="25sp" />

                            </RelativeLayout>


                        </android.support.v7.widget.LinearLayoutCompat>
                    </LinearLayout>

                </android.support.v7.widget.LinearLayoutCompat>

                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:background="@color/white"
                    android:elevation="5dp"
                    android:orientation="vertical"
                    app:divider="@drawable/dot"
                    app:showDividers="beginning|end">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:src="@drawable/ic_poweroff" />


                        </LinearLayout>

                        <android.support.v7.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:divider="@drawable/dot"
                            app:showDividers="middle">

                            <Button
                                android:id="@+id/poweroff"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/white"
                                android:drawableRight="@drawable/arrow"
                                android:gravity="center_vertical|left"
                                android:paddingLeft="15dp"
                                android:text="退出账号"
                                android:textSize="30sp" />
                        </android.support.v7.widget.LinearLayoutCompat>
                    </LinearLayout>

                </android.support.v7.widget.LinearLayoutCompat>


            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</FrameLayout>
